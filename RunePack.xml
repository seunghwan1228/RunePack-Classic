<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Script file="RunePack.lua"/>

  <Frame name="RuneButtonIndividualTemplateC" virtual="true" hidden="false">
    <Size>
      <AbsDimension x="18" y="18"/>
    </Size>
    <Frames>
      <Frame name="$parentBorder">
        <Size x="29" y="29"/>
        <Anchors>
          <Anchor point="CENTER">
            <Offset x="0" y="0"/>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnLoad>
            self:SetFrameLevel(self:GetFrameLevel()+1);
          </OnLoad>
        </Scripts>
      </Frame>
    </Frames>
    <Layers>


      <Layer level="ARTWORK">
        <Texture name="$parentRune" file="Interface\CharacterFrame\DeathKnight-BloodRune">
          <Size>
            <AbsDimension x="25" y="25"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
        RuneButtonC_OnLoad(self);
      </OnLoad>
    </Scripts>
  </Frame>

  <Frame name="RuneFrameC" parent="UIParent" frameStrata="LOW" toplevel="true" movable="true" enableMouse="true" hidden="false">
    <Size>
      <AbsDimension x="240" y="40"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent" relativePoint="BOTTOMRIGHT">
        <Offset>
          <AbsDimension x="0" y="400"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Scripts>
      <OnLoad>
        RuneFrameC_OnLoad(self);
        self:SetMovable(true);
        self:SetClampedToScreen(true);
      </OnLoad>
      <OnDragStart>
        if not RunePack_Saved.Locked then
          self:StartMoving();
        end
      </OnDragStart>
      <OnDragStop>
        if not RunePack_Saved.Locked then
          self:StopMovingOrSizing();
          
          -- Get absolute point values for precise positioning
          local point, relativeTo, relativePoint, xOfs, yOfs = self:GetPoint();
          
          -- Save these exact values (this is what WoW itself uses)
          RunePack_Saved.point = point;
          RunePack_Saved.relativeTo = "UIParent";
          RunePack_Saved.relativePoint = relativePoint;
          RunePack_Saved.xOfs = xOfs;
          RunePack_Saved.yOfs = yOfs;
          
          -- Force save settings immediately
          RunePack_SaveSettings(false, true); -- Not silent, force position
          
          -- Let user know position was saved
          DEFAULT_CHAT_FRAME:AddMessage(string.format(
            "RunePack: Position saved - %s to %s of %s (%.1f, %.1f)", 
            point, relativePoint, "UIParent", xOfs, yOfs));
        end
      </OnDragStop>
    </Scripts>
  </Frame>

  <Frame name="RuneFrameBack" inherits="BackdropTemplate" parent="RuneFrameC" frameStrata="LOW" toplevel="true" movable="true" hidden="false">
    <Size>
      <AbsDimension x="252" y="54"/>
    </Size>
    <Anchors>
      <Anchor point="BOTTOM" relativeTo="RuneFrameC" relativePoint="BOTTOM">
        <Offset>
          <AbsDimension x="0" y="2"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Scripts>
      <OnLoad>
        self:SetBackdrop({ 
          bgFile = "Interface\\AddOns\\RunePack\\textures\\back.tga", 
          tile = false,
          insets = { left = 3, right = 3, top = 2, bottom = 3 }
        });
      </OnLoad>
    </Scripts>
  </Frame>

  <Button name="RuneFrameC_Drag" inherits="UIPanelButtonTemplate" frameStrata="MEDIUM" hidden="true" parent="RuneFrameC" text="Drag">
    <Size>
      <AbsDimension x="48" y="20"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativeTo="RuneFrameC" relativePoint="TOP">
        <Offset>
          <AbsDimension x="0" y="20"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Scripts>
      <OnLoad>
        self:SetFrameLevel(self:GetFrameLevel()+1);
      </OnLoad>
    </Scripts>
  </Button>

  <Frame name="RuneButtonIndividual1C" inherits="RuneButtonIndividualTemplateC" parent="RuneFrameC" id="1" frameStrata="LOW">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="RuneFrameC" relativePoint="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
  </Frame>

  <Frame name="RuneButtonIndividual2C" inherits="RuneButtonIndividualTemplateC" parent="RuneFrameC" id="2" frameStrata="LOW">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="RuneFrameC" relativePoint="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
  </Frame>

  <Frame name="RuneButtonIndividual3C" inherits="RuneButtonIndividualTemplateC" parent="RuneFrameC" id="3" frameStrata="LOW">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="RuneFrameC" relativePoint="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
  </Frame>

  <Frame name="RuneButtonIndividual4C" inherits="RuneButtonIndividualTemplateC" parent="RuneFrameC" id="4" frameStrata="LOW">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="RuneFrameC" relativePoint="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
  </Frame>

  <Frame name="RuneButtonIndividual5C" inherits="RuneButtonIndividualTemplateC" parent="RuneFrameC" id="5" frameStrata="LOW">
    <Anchors>
      <Anchor point="TOPLEFT" relativeTo="RuneFrameC" relativePoint="TOPLEFT">
        <Offset>
          <AbsDimension x="0" y="0"/>
